local bossFolder = workspace:WaitForChild("BossFolder")

for _, boss in pairs(bossFolder:GetChildren()) do
	local head = boss:FindFirstChild("Head")
	if head then
		head.Size = Vector3.new(15, 15, 15)
		head.CanCollide = true
		head.Massless = true
	end
end
end
end)


